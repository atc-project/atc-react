<p class="auto-cursor-target"><br /></p>
<ac:structured-macro ac:name="details" ac:schema-version="1" ac:macro-id="28b7d879-550c-4376-96ff-fdbdfddf710b">
   <ac:rich-text-body>
      <p class="auto-cursor-target"><br /></p>
      <table class="wrapped confluenceTable">
         <colgroup>
            <col />
            <col />
         </colgroup>
         <tbody>
            <tr>
               <th class="confluenceTh">ID</th>
               <td class="confluenceTd">{{  id|e }}<br /></td>
            </tr>
            <tr>
               <th class="confluenceTh">Description</th>
               <td class="confluenceTd">{{  description|e }}<br /></td>
            </tr>
            <tr>
               <th class="confluenceTh">Author</th>
               <td class="confluenceTd">{{ author|e }}<br /></td>
            </tr>
{% if creation_date is defined and creation_date|length %}
            <tr>
               <th class="confluenceTh">Creation Date</th>
               <td class="confluenceTd">{{ creation_date|e }}<br /></td>
            </tr>
{% endif %}
            <tr>
               <th class="confluenceTh">Category</th>
               <td class="confluenceTd">{{ category|e }}<br /></td>
            </tr>
            <tr>
               <th class="confluenceTh">Stage</th>
               {%- for rs_id, rs_name, rs_confluence_page_id in stage %}
               <td class="confluenceTd"><a href="{{confluence_viewpage_url}}{{rs_confluence_page_id}}">{{ rs_id }}: {{ rs_name }}</a><br /></td>
               {% endfor -%}
            </tr>
{% if automation is defined and automation|length %}
            <tr>
               <th class="confluenceTh">Automation</th>
               <td class="confluenceTd">
                  {%- if automation |length > 1 -%}<ul>{%endif%}
                     {% for auto in automation %}
                     {%- if automation |length > 1 -%}<li>{%endif%}{{ auto }}{%- if automation |length > 1 -%}</li>{%endif%}
                     {% endfor %}
                  {%- if automation |length > 1 -%}</ul>{%endif%}
               </td>
            </tr>
{% endif %}
{% if references is defined and references|length %}
            <tr>
               <th class="confluenceTh">References</th>
               <td class="confluenceTd">
                  {%- if references |length > 1 -%}<ul>{%endif%}
                     {% for ref in references %}
                     {%- if references |length > 1 -%}<li>{%endif%}<a href="{{ ref |e }}">{{ ref |e }}</a>{%- if references |length > 1 -%}</li>{%endif%}
                     {% endfor %}
                  {%- if references |length > 1 -%}</ul>{%endif%}
               </td>
            </tr>
{% endif %}
{% if linkedra is defined and linkedra|length %}
            <tr>
               <th class="confluenceTh">Linked Response Actions</th>
               <td class="confluenceTd">
                  {%- if linkedra |length > 1 -%}<ul>{%endif%}
                     {% for action_name, action_id in linkedra %}
                     {%- if linkedra |length > 1 -%}<li>{%endif%}<a href="{{confluence_viewpage_url}}{{action_id}}">{{ action_name }}</a>{%- if linkedra |length > 1 -%}</li>{%endif%}
                     {% endfor %}
                  {%- if linkedra |length > 1 -%}</ul>{%endif%}
               </td>
            </tr>
{% endif %}
{% if linked_analytics is defined and linked_analytics|length %}
            <tr>
               <th class="confluenceTh">Linked Analytics</th>
               <td class="confluenceTd">
                  {%- if linked_analytics |length > 1 -%}<ul>{%endif%}
                     {% for analytic in linked_analytics %}
                     {%- if linked_analytics |length > 1 -%}<li>{%endif%}<a href="{{ analytic }}">{{ analytic }}</a>{%- if linked_analytics |length > 1 -%}</li>{%endif%}
                     {% endfor %}
                  {%- if linked_analytics |length > 1 -%}</ul>{%endif%}
               </td>
            </tr>
{% endif %}
         </tbody>
      </table>
      <p class="auto-cursor-target"><br /></p>
   </ac:rich-text-body>
</ac:structured-macro>
{% if (workflow is defined and workflow|length) or (details is defined and details['workflow'] is defined and details['workflow']|length) %}
<h1>Workflow</h1>
<ac:structured-macro ac:name="markdown"><ac:plain-text-body>
  {% if workflow is defined %}<![CDATA[{{ workflow }}]]> {% endif %}
  {% if details is defined %}<![CDATA[{{ details['workflow'] }}]]> {% endif %}
</ac:plain-text-body></ac:structured-macro>
{% else %}
{% endif %}
